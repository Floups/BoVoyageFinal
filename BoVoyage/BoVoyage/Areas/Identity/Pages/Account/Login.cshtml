@page
@model LoginModel

@{
    ViewData["Title"] = "Se connecter";
}

<h1 class="text-center mb-3">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-9">
        <section class="card">
            <div class="card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                    <div class="form-group d-flex flex-column align-items-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire en tant que nouvel utilisateur</a>
                        </p>
                    </div>
                </form>
            </div>
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
