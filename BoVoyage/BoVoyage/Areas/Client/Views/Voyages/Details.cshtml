@model BoVoyage.Models.Voyage

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.IdDestinationNavigation.Nom</h1>

<div class="row">
 <div class="card" style="width: 20rem; margin:1em">
                <img src="..." class="card-img-top" alt="@Html.DisplayFor(modelItem => voyage.IdDestinationNavigation.Nom)">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => voyage.IdDestinationNavigation.Nom)</h5>
                    <p class="card-text">
                        Du <bold>@Html.DisplayFor(modelItem => voyage.DateDepart) </bold>
                        au <bold>@Html.DisplayFor(modelItem => voyage.DateRetour) </bold>
                    </p>
                    <p>@Html.DisplayFor(modelItem => voyage.Descriptif) </p>
                    <p>Au prix de @Html.DisplayFor(modelItem => voyage.PrixHt) €! Transport et hébergement compris!</p>
                    <a asp-action="Details" asp-route-id="@voyage.Id" class="btn btn-primary">En savoir plus</a>
                </div>
  </div>

</div>


<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDepart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDepart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRetour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRetour)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlacesDispo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlacesDispo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixHt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixHt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reduction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reduction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descriptif)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descriptif)
        </dd>
     
       
    </dl>
</div>
<div>
    <a asp-action="Reserver" asp-route-id="" class="btn btn-primary">Réserver</a>

</div>
